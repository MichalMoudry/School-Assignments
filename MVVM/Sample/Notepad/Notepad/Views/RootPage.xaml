<Page x:Class="Notepad.Views.RootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Notepad.Views"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="360" MinHeight="360" MinWidth="360"
      Title="RootPage">

    <Grid Background="White">
        <StackPanel>
            <ScrollViewer MaxHeight="300">
                <RichTextBox BorderThickness="1" BorderBrush="Black" SpellCheck.IsEnabled="True" x:Name="notepad" MinHeight="200" />
            </ScrollViewer>
            <Button x:Name="saveFileButton" Click="saveFileButton_Click" Width="130" Height="30" Content="Save" Cursor="Hand" />
            <Button x:Name="loadFileButton" Click="loadFileButton_Click" Width="130" Height="30" Content="Reload" Cursor="Hand" />
        </StackPanel>
    </Grid>
</Page>
